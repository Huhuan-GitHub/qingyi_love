/* pages/personal/personal.wxss */
.UCenter-bg {
  background-image: url(https://img1.baidu.com/it/u=3341353014,1920506342&fm=253&fmt=auto&app=120&f=JPEG?w=989&h=500);
  background-size: cover;
  height: 400rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  width: 750rpx;
  height: 300rpx;
}

.posts-list-container {
  background-color: #fff;
  padding: 24rpx;
}

.posts-item {
  margin-bottom: 36rpx;
}

.posts-header {
  line-height: 42rpx;
}

.posts-date {
  font-size: 24rpx;
  color: #aaaaaa;
}

.posts-content {
  font-size: 28rpx;
  font-weight: bold;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.posts-img {
  margin: 12rpx 0;
}