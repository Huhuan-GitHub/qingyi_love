<scroll-view scroll-y class="scrollPage">
  <view class="UCenter-bg" style="background-image: url({{miniUser.backgroundImage}});">
    <image src="{{miniUser.avatar}}" class="png" mode="widthFix"></image>
    <view class="text-xl" style="color: white;font-weight: bold;">{{miniUser.username}}
    </view>
    <view wx:if="{{isLogin}}" class="edit-info" catchtap="toEditUserInfo" data-openid="{{miniUser.openid}}">
      <van-icon name="edit" />
      <text>编辑昵称与头像</text>
    </view>
    <view wx:else>
      <van-button class="login-btn" color="linear-gradient(to right, #4bb0ff, #6149f6)"  catchtap="login">登录</van-button>
    </view>
  </view>
  <view class="padding flex text-center text-grey bg-white shadow-warp">
    <view class="flex flex-sub flex-direction solid-right" catchtap="toMyAttentionPage">
      <view class="text-xxl text-orange">{{myAttentionSize}}</view>
      <view class="margin-top-sm">
        <text class="cuIcon-wefill"></text> 关注
      </view>
    </view>
    <view class="flex flex-sub flex-direction solid-right">
      <view class="text-xxl text-blue">{{friendSize}}</view>
      <view class="margin-top-sm">
        <text class="cuIcon-friend"></text> 好友
      </view>
    </view>
    <view class="flex flex-sub flex-direction">
      <view class="text-xxl text-green">{{myAttentionedSize}}</view>
      <view class="margin-top-sm">
        <text class="cuIcon-like"></text> 粉丝
      </view>
    </view>
  </view>
  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
    <view class="cu-item arrow">
      <view class="content" bindtap="CopyLink" data-link="https://github.com/weilanwl/ColorUI">
        <text class="cuIcon-favorfill text-grey"></text>
        <text class="text-grey">我的关注</text>
      </view>
    </view>
    <!-- <view class="cu-item arrow">
      <navigator class="content" url="/pages/about/about/about" hover-class="none">
        <image src="/images/logo.png" class="png" mode="aspectFit"></image>
        <text class="text-grey">关于卷弈刷题小程序</text>
      </navigator>
    </view> -->
    <view class="cu-item arrow" bindtap="reward">
      <view class="content" bindtap="showQrcode">
        <text class="cuIcon-appreciatefill text-red"></text>
        <text class="text-grey">赞赏支持</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <button class="cu-btn content" open-type="feedback">
        <text class="cuIcon-writefill text-cyan"></text>
        <text class="text-grey">资料编辑</text>
      </button>
    </view>
    <view class="cu-item arrow">
      <button class="cu-btn content" open-type="feedback">
        <text class="cuIcon-creativefill text-orange"></text>
        <text class="text-grey">提个Bug</text>
      </button>
    </view>
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/settings/settings" hover-class="none">
        <text class="cuIcon-settingsfill"></text>
        <text class="text-grey">设置</text>
      </navigator>
    </view>
  </view>
  <my-overlay isShow="{{isShowOverlay}}"></my-overlay>
  <view class="cu-tabbar-height"></view>
</scroll-view>