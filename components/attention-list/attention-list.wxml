<view>
  <view class="list-box">
    <view class="list-item" wx:for="{{attentionList}}" wx:key="item">
      <view class="item-box">
        <view class="cu-avatar xl round" style="background-image:url({{item.attentionedMiniUser===null?item.attentionMiniUser.avatar:item.attentionedMiniUser.avatar}});"></view>
        <view class="base-info">
          <view class="nick-name">
            {{item.attentionedMiniUser===null?item.attentionMiniUser.username:item.attentionedMiniUser.username}}
          </view>
          <view class="update-time">
            {{item.attentionTime}}
          </view>
        </view>
        <view class="action">
          <simple-attention-button state="1" attentionOpenid="{{item.attentionedMiniUser.openid}}"></simple-attention-button>
        </view>
      </view>
    </view>
  </view>
</view>